<h1>Listing comments</h1>

<table>
  <tr>
    <th>Created At</th>
    <th>Post</th>
    <th>Author</th>
    <th>Actions</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.created_at.iso8601 %></td>
    <td><%=h comment.post ? comment.post.slug : '?' %></td>
    <td><%=h comment.author %></td>
    <td><%= link_to 'Show', comment %>
    <%= link_to 'Edit', edit_comment_path(comment) %>
    <%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path %>
