<% for post in @posts %>
<article>
<header>
<h3><%= link_to post.title, post_url(post) %></h3>
<hr/><time title="GMT" datetime="<%= post.created_at.iso8601 %>"><%=
post.created_at %></time>
</header>
<%= post.scaled_svg %>
<%= (post==@posts.first || !post.summary) ? post.content : post.summary -%>
<footer>
<%= comment_link(post) %>
</footer>
</article>
<% end %>
